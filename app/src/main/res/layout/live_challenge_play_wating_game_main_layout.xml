<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:visibility="visible"
    android:gravity="center_horizontal"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/live_challenge_invite_header_left_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:text="MỜI BẠN BÈ"
            android:background="@drawable/radius_edittext_trans_bg_white_srtoke_layout"
            android:layout_centerInParent="true"
            android:layout_width="130dp"
            android:layout_height="36dp" />


        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/live_challenge_invite_header_right_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTimer"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:background="@drawable/live_challenge_invite_header_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="17sp"
                android:id="@+id/timeStartLb"
                android:textColor="@color/white"
                android:text="Bắt đầu sau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="46sp"
                android:id="@+id/tvTimeStart"
                android:textColor="#FFF12E"
                android:text="14:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_edittext_white_bg_white_srtoke2_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="#8685CE"
        android:text="Bạn đã bị loại"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/radius_edittext_white_bg_gray_srtoke2_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <TextView
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/tvQuestion"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Tài nguyên có ý nghĩa đặc biệt đối với sự phát triển kinh tế xã hội Việt Nam hiện nay là:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout

                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rlA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:visibility="invisible"
                        android:id="@+id/rlViewPercentA"
                        android:background="@drawable/radius_bg_green_just_on_left_layout"
                        android:layout_width="0dp"
                        android:layout_height="54dp">



                    </RelativeLayout>

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/btnA"
                        android:paddingLeft="10dp"
                        android:gravity="start|center_vertical"
                        android:text="A. Tài nguyên đất"

                        android:background="@drawable/radius_edittext_white_bg_gray_srtoke2_layout"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        />
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:text="1234"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/rlB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:visibility="invisible"
                        android:id="@+id/rlViewPercentB"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radius_bg_green_just_on_left_layout"
                        android:layout_width="0dp"
                        android:layout_height="54dp">



                    </RelativeLayout>

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/btnB"
                        android:paddingLeft="10dp"
                        android:gravity="start|center_vertical"
                        android:text="A. Tài nguyên đất"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/radius_edittext_white_bg_gray_srtoke2_layout"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        />

                </RelativeLayout>


                <Button
                    android:id="@+id/btnShare"
                    android:textColor="@color/white"
                    android:text="Chia Sẻ"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/radius_button_oringe_bg_none_srtoke_layout"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="128dp"
                    android:layout_height="36dp" />

            </LinearLayout>



        </LinearLayout>





    </RelativeLayout>

    <Button
        android:id="@+id/btnClose"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:text="Thoát"
        android:background="@drawable/radius_button_purple_bg_purple_srtoke_layout"
        android:layout_gravity="center_horizontal"
        android:layout_width="128dp"
        android:layout_height="36dp" />


</LinearLayout>
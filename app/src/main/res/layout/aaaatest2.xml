<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="370dp">




        <android.support.v7.widget.CardView
            android:layout_alignParentBottom="true"
            card_view:cardElevation="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            card_view:cardCornerRadius="6dp">

            <TextView
                android:text="Hello Card"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:background="@drawable/ic_topic_detail_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_topic_title"
            android:text="Basic Math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/imv_favorite"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_favorite_blue_300_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

<RelativeLayout
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_single_play"
        android:textColor="@color/white"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="LUYEN TAP"
        android:background="@drawable/radius_button_purple_bg_purple_srtoke_layout"
        android:drawableLeft="@drawable/ic_detail_solo"
        android:layout_width="140dp"
        android:layout_height="36dp" />

    <Button
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="LUYEN TAP"
        android:background="@drawable/radius_button_red_bg_red_srtoke_layout"
        android:drawableLeft="@drawable/ic_detail_chalenge"
        android:layout_width="140dp"
        android:layout_height="36dp" />

</RelativeLayout>

</RelativeLayout>
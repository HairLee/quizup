<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:gravity="center_vertical"
    android:background="@color/colorPrimary"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tvAllTopicTitle"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:text="Tất cả các chủ đề"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <android.support.v7.widget.SearchView
        android:visibility="visible"
        android:layout_toRightOf="@+id/imvSearch"
        app:searchIcon="@color/transparent"
        app:queryHint="Tìm kiếm một chủ đề"
        android:id="@+id/searchView"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <View
        android:id="@+id/viewClose"
        android:background="@color/colorPrimary"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvCancel"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <ImageView
        android:padding="10dp"
        android:id="@+id/imvFavouriteTopic"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/topic_favor_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imvSearch"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:src="@drawable/ic_search_white_24dp"
        android:layout_height="25dp" />


</RelativeLayout>
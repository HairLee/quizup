<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/challenge_prepare_item_bg"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp">



    <RelativeLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="17:00 pm GMT +7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/dollar_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTimeStart"
                android:textColor="#FFF700"
                android:layout_marginLeft="3dp"
                android:text="10.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="Tên giải đấu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnDetail"
            android:textAppearance="@android:style/TextAppearance.Widget.TabWidget"
            android:textColor="@color/white"
            android:text="Chi tiết"
            android:layout_marginBottom="2dp"
            android:background="@drawable/radius_edittext_trans_bg_white_srtoke_layout"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="28dp" />


    </RelativeLayout>




</RelativeLayout>


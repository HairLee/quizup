<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/imvAva"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="13sp"
                android:text="Bạn đã mời thách đấu Kelvin Kramer trong chủ đề Địa lí   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:text="2 minutes ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imvAva"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_home_playing"
            android:layout_width="32dp"
            android:layout_height="32dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancel"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorPurple"
            android:text="HỦY"
            android:background="@drawable/radius_edittext_white_bg_blue_srtoke_layout"
            android:layout_width="85dp"
            android:layout_height="36dp" />

        <Button
            android:id="@+id/btnChallenge"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorPurple"
            android:text="CHI TIẾT"
            android:background="@drawable/radius_edittext_white_bg_blue_srtoke_layout"
            android:layout_width="85dp"
            android:layout_height="36dp" />


        <Button
            android:id="@+id/btnPlay"
            android:textColor="@color/white"
            android:text="CHƠI"
            android:background="@drawable/radius_button_purple_bg_purple_srtoke_layout"
            android:layout_width="85dp"
            android:layout_height="36dp" />

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/gray_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

</RelativeLayout>
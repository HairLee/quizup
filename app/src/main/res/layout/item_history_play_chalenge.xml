<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_margin="5dp"
    android:background="@drawable/radius_edittext_white_bg_gray_srtoke2_layout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="155dp">

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--app:cardElevation="3dp"-->
    <!--app:cardCornerRadius="5dp"-->

    <!--xmlns:android="http://schemas.android.com/apk/res/android">-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rlTop"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imFavor"
                android:src="@drawable/ic_challenge_practice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:id="@+id/tvTitle"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imFavor"
                android:text="Luyện tập"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_toLeftOf="@+id/imvRemove"
                android:id="@+id/tvNameOfTopic"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tvTitle"
                android:text="Education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imvRemove"
                android:src="@drawable/ic_remove"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <View

                android:background="@color/gray_4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />


        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:layout_below="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_ava_default"
                android:id="@+id/imvAva"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <RelativeLayout

                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imvAva"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/tvName"
                    android:textSize="14sp"
                    android:text="Bạn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_below="@+id/tvName"
                    android:id="@+id/tvTime"
                    android:textSize="12sp"
                    android:text="1 phút trước"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <LinearLayout
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tvNumberOfWins"
                    android:textSize="14sp"
                    android:textColor="#43AF15"
                    android:layout_gravity="end"
                    android:text="Chuỗi thắng : 100 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="start|center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCoins"
                        android:textSize="12sp"
                        android:text="Phần thưởng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_history_xp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvEx"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:text="+20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/rlBottom"
            android:background="@drawable/radius_bg_blue_just_on_bottom_layout"
            android:layout_above="@+id/viewId"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:id="@+id/tvPlayAgain"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:text="CHƠI LẠI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <View
            android:visibility="gone"
            android:id="@+id/viewId"
            android:background="#C8C7CC"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="5dp" />

    </RelativeLayout>

    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>
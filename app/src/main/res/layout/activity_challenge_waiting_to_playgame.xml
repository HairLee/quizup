<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ChallengeWaitingToPlayGameActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@drawable/challenge_vs_bg"
        tools:context=".ui.activity.ChallengeFindingRandomOpponentActivity">





        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rlMe"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:padding="5dp"
                android:layout_marginLeft="40dp"
                android:layout_centerVertical="true"
                android:id="@+id/rlimvMyself"
                android:layout_width="110dp"
                android:layout_height="110dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_centerVertical="true"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#ffffff"
                    tools:src="@drawable/ic_home_playing"
                    android:id="@+id/imvMyself"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </RelativeLayout>



            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rlimvMyself"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="Bạn"
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/white"
                    android:text="Level 12"
                    android:id="@+id/tvMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#80ffffff"
                    android:text="Chuyên gia"
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rlOp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                tools:src="@drawable/ic_home_playing"
                android:id="@+id/imvOb"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imvOb"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    tools:text="Jack"
                    android:id="@+id/tvOpName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/white"
                    android:text="Level 20"
                    android:id="@+id/tvOpMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#80ffffff"
                    android:text="Chuyên gia"
                    android:id="@+id/tvOpLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_centerInParent="true"
        android:src="@drawable/challenge_vs_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
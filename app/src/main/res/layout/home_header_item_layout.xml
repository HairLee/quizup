<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/colorPurple"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imvAva"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="15dp"
    android:layout_width="34dp"
    android:visibility="visible"
    android:src="@drawable/default_ava"
    android:layout_height="34dp" />



    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imvAva"
        android:layout_toLeftOf="@+id/rlNoti"
        android:background="@color/colorPurple"
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <TextView
            android:textColor="#B8B8B8"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:id="@+id/txtSearch"
            android:layout_toRightOf="@+id/imvSearch"
            android:layout_centerVertical="true"
            android:text="Tim kiem mot chu de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtSearch"
            android:paddingLeft="10dp"
            android:background="@drawable/radius_edittext_white_bg_white_srtoke_layout"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/tvSearch"
            android:textSize="15sp"
            android:textColor="#B8B8B8"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <ImageView
            android:id="@+id/imvSearch"
            android:layout_marginLeft="28dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_width="18dp"
            android:layout_height="18dp" />

    </RelativeLayout>






    <RelativeLayout
        android:layout_marginRight="15dp"
        android:id="@+id/rlNoti"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="36dp"
        android:layout_height="36dp">

        <ImageView

            android:src="@drawable/icon_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_width="16dp"
            android:layout_height="16dp">
            <ImageView
                android:src="@drawable/home_number_of_notify_icon"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:textColor="@color/white"
                android:textSize="9sp"
                android:layout_centerInParent="true"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>
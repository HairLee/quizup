<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerVertical="true"
        android:id="@+id/imvAva"
        android:layout_marginLeft="16sp"
        android:layout_width="48dp"
        android:src="@drawable/ic_home_playing"
        android:layout_height="48dp" />

    <LinearLayout
        android:id="@+id/lnInfo"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imvAva"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvName"
            android:textColor="@color/black"
            android:text="Ambition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:text="Level 120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

         <ImageView
             android:layout_marginRight="4dp"
             android:layout_marginLeft="4dp"
             android:src="@drawable/non_active_dot"
             android:layout_width="4dp"
             android:layout_height="4dp" />

            <TextView
                android:textSize="13sp"
                android:textColor="#FF9101"
                android:text="Ti le thang 50%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>

    <Button
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/lnInfo"
        android:id="@+id/btnChallenge"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPurple"
        android:text="THÁCH ĐẤU"
        android:textSize="11sp"
        android:background="@drawable/radius_button_trans_bg_purple_srtoke_layout"
        android:layout_marginRight="16sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="36dp" />

    <View
        android:layout_marginLeft="80dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/gray_2"
        android:layout_height="0.5dp"
        />



</RelativeLayout>
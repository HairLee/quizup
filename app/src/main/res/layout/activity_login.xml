<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/longin_bg"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.login.widget.LoginButton
            android:visibility="gone"
            android:id="@+id/btn_login_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_marginBottom="100dp"
        android:id="@+id/imv_login_facebook"
        android:layout_centerHorizontal="true"
        android:background="@drawable/radius_edittext_blue_bg_blue_srtoke_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="260dp"
        android:layout_height="46dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/facebook_white_ic"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="KẾT NỐI FACEBOOK"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <RelativeLayout
        android:background="#FEFEFF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/lnTop"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="11sp"
                android:text="Bằng đăng nhập bạn đã"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="11sp"
                android:textColor="@color/black"
                android:text=" Đồng ý"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_below="@+id/lnTop"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="11sp"
                android:text="với"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="11sp"
                android:textColor="@color/black"
                android:text=" Chính sách"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="11sp"
                android:text=" và"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="11sp"
                android:textColor="@color/black"
                android:text=" Điều khoản dịch vụ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:textSize="11sp"
                android:text=" của chúng tôi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>





    </RelativeLayout>


</RelativeLayout>



<RelativeLayout
    android:id="@+id/rlUser"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_marginLeft="10dp"
        app:civ_shadow="true"
        app:civ_border="false"
        app:civ_shadow_radius="10"
        android:layout_centerVertical="true"
        app:civ_shadow_color="@color/gray_2"
        android:src="@drawable/icon_food"
        android:id="@+id/imv_game_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#5C5C5C"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:text="Test"
        android:layout_toRightOf="@+id/imv_game_icon"
        android:id="@+id/txt_topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/imv_game_icon"
        android:textColor="#5C5C5C"
        android:textSize="10sp"
        android:text="Advance"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/txt_topic_title"
        android:id="@+id/txt_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>




<android.support.v7.widget.CardView
    android:minHeight="250dp"
    android:layout_width="270dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="13dp"
    card_view:cardUseCompatPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTitle">

            <ImageView
                android:id="@+id/imvAva"
                android:layout_marginTop="20dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_home_playing" />





            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="fonts/HelveticaLightOblique.ttf"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambition"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 18"
                    android:textColor="@color/oringe_3"

                    android:textSize="15sp" />

            </LinearLayout>



        </LinearLayout>

        <View
            android:background="@color/gray_2"
            android:layout_above="@+id/lnBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/lnBottom"
            android:weightSum="2"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">


            <TextView
                android:textSize="17sp"
                android:gravity="center"
                android:id="@+id/btnAccept"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="LEFT"
                android:textColor="@color/colorPurple" />

            <View
                android:background="@color/gray_2"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="17sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/btnReject"
                android:layout_height="match_parent"
                android:text="RIGHT"
                android:textColor="@color/colorPurple" />

        </LinearLayout>





    </RelativeLayout>



</android.support.v7.widget.CardView>




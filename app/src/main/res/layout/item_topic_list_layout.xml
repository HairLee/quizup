<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingLeft="10dp"
    >

    <RelativeLayout
        android:id="@+id/rl_game_icon"
        android:layout_centerVertical="true"
        android:layout_width="54dp"
        android:layout_height="54dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:src="@drawable/icon_food"
            android:id="@+id/imv_game_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/imvFavor"
            android:layout_alignParentRight="true"
            android:src="@drawable/favor_topic_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rl_game_icon"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#5C5C5C"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Test"
            android:layout_marginTop="2dp"
            android:id="@+id/txt_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#5C5C5C"
            android:textSize="10sp"
            android:text="Advance"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/txt_topic_title"
            android:id="@+id/txt_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@color/white"
            android:text="CHÆ I"
            android:background="@drawable/radius_button_blue_bg_blue_srtoke_layout"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="68dp"
            android:layout_height="36dp" />

    </RelativeLayout>

    <View
        android:id="@+id/viewBottom"
        android:layout_marginLeft="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


</RelativeLayout>


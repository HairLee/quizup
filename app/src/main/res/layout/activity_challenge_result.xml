<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.activity.ChallengeResultActivity">


    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="KẾT QUẢ"
        android:textColor="#80ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:text="Thể Thao"
        android:textColor="#80ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="BẠN CHIẾN THẮNG"
        android:textColor="#2DDCAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/radius_edittext_trans_bg_white_srtoke_layout"
        android:layout_width="95dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_xp"
            android:layout_width="24dp"
            android:layout_height="24dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:background="@drawable/challenge_result_vs_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lnMyself"
            android:layout_marginLeft="25dp"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/ic_home_playing"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:layout_marginTop="13dp"
                android:textColor="@color/white"
                android:text="Ambition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="7dp"
                android:textColor="@color/white"
                android:text="Level 12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#48ffffff"
                android:text="Chuyên gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="#F86868"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/lnMyself"
            android:textSize="20sp"
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:id="@+id/lnOp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/ic_home_playing"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:layout_marginTop="13dp"
                android:textColor="@color/white"
                android:text="Ambition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="7dp"
                android:textColor="@color/white"
                android:text="Level 12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#48ffffff"
                android:text="Chuyên gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:textColor="#4CCC15"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_toLeftOf="@+id/lnOp"
            android:textSize="20sp"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/challenge_result_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
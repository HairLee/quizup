

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="13dp"
    card_view:cardUseCompatPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="275dp">


        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/radius_bg_purple_just_on_top_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SO TÀI"
                android:textColor="@color/white" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imvClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/ic_close" />


        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTitle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_home_playing" />

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="end"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="Ambition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#80000000"
                        android:text="Level 12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/oringe_3"
                        android:text="Tỉ lệ thắng 50%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <View
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="0.5dp"
                    android:layout_height="60dp"
                    android:background="@color/gray_2"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginRight="10dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KenVin"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 18"
                        android:textColor="#80000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Tỉ lệ thắng 60%"
                        android:textColor="@color/oringe_3"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/btnInvite"
            android:id="@+id/tvTimeCountDown"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1234"/>

        <Button
            android:id="@+id/btnInvite"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_ok"
            android:background="@drawable/radius_button_purple_bg_purple_srtoke_layout"
            android:text="MỜI CHƠI "
            android:textColor="@color/white" />


    </RelativeLayout>



   </android.support.v7.widget.CardView>




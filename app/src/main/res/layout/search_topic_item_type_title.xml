<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:layout_marginLeft="75dp"
        android:id="@+id/viewTop"
        android:background="@color/gray_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_marginLeft="10dp"
        app:civ_shadow="true"
        app:civ_border="false"
        app:civ_shadow_radius="10"
        android:layout_centerVertical="true"
        app:civ_shadow_color="@color/gray_2"
        android:src="@drawable/icon_food"
        android:id="@+id/imv_game_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ln_topic_title"
        android:layout_toRightOf="@+id/imv_game_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:textStyle="bold"
            android:textColor="#5C5C5C"
            android:textSize="15sp"
            android:text="Test"
            android:id="@+id/txt_topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/search_dot_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLevel"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:text="Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:layout_marginRight="100dp"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imv_game_icon"
        android:textColor="#5C5C5C"
        android:textSize="10sp"
        android:text="Advance"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/ln_topic_title"
        android:id="@+id/txt_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imvFollow"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/search_follow_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>


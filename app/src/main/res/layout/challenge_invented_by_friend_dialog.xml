

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="13dp"
    card_view:cardUseCompatPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="400dp">


        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/radius_bg_purple_just_on_top_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="LỜI MỜI SO TÀI"
                android:textColor="@color/white" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imvClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/ic_close" />


        </RelativeLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTitle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_home_playing" />





                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="fonts/HelveticaLightOblique.ttf"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambition"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 18"
                        android:textColor="@color/oringe_3"

                        android:textSize="15sp" />

                    <TextView
                        android:textColor="#80000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chuyên gia"
                        android:textSize="15sp" />

                </LinearLayout>


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/ic_home_playing"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textColor="@color/colorPurple"
                    android:layout_marginLeft="10dp"
                    android:layout_above="@+id/btnInvite"
                    android:id="@+id/tvTimeCountDown"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chủ đề Địa lí"/>

            </LinearLayout>




            </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="140dp"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_ok"
                android:background="@drawable/radius_button_purple_bg_purple_srtoke_layout"
                android:text="ĐỒNG Ý"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="140dp"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_ok"
                android:background="@drawable/radius_edittext_white_bg_blue_srtoke_layout"
                android:text="TỪ CHỐI"
                android:textColor="@color/colorPurple" />

        </LinearLayout>





    </RelativeLayout>



</android.support.v7.widget.CardView>




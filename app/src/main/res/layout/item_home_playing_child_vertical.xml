<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/imvAva"
        android:src="@drawable/ic_home_playing"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_marginLeft="5dp"
       android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imvAva"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNuberOfWin"
            android:text="1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTime"
            android:text="1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <Button
        android:id="@+id/btnContinueToPlay"
        android:textColor="@color/white"
        android:text="CHƠI TIẾP"
        android:layout_centerVertical="true"
        android:background="@drawable/radius_button_purple_bg_purple_srtoke_layout"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="45dp" />
    <View
        android:id="@+id/viewId"
        android:background="#C8C7CC"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ChallengeInvitationDialogActivity">

        <RelativeLayout
            android:layout_margin="40dp"
            android:background="@drawable/radius_bg_white_just_on_bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="275dp">

            <RelativeLayout
                android:id="@+id/rlTitle"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/radius_bg_purple_just_on_top_layout">


                <TextView
                    android:id="@+id/tvTopicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="SO TÀI"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imvClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_close" />


            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlTitle">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imvAva"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_home_playing" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="end"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvMyName"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="Ambition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="15sp"
                            android:textColor="#80000000"
                            android:text="Level 12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView

                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/oringe_3"
                            android:text="Tỉ lệ thắng 50%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <View
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="0.5dp"
                        android:layout_height="60dp"
                        android:background="@color/gray_2"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOpName"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KenVin"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 18"
                            android:textColor="#80000000"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Tỉ lệ thắng 60%"
                            android:textColor="@color/oringe_3"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_ok"
                android:background="@drawable/radius_button_purple_bg_purple_srtoke_layout"
                android:text="ĐỒNG Ý"
                android:textColor="@color/white" />


        </RelativeLayout>








</RelativeLayout>